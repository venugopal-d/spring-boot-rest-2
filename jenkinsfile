 pipeline {
    agent any
	triggers { cron('0 0/1 * 1/1 * ? *' : '') }

    stages {
		 stage('QA checks') {
            steps {
                echo 'Quality checks'
            }
			}
			stage('Security scan using OWASP') {
            steps {
                echo 'Security scans'
				 dependencyCheck additionalArguments: '--scan=. --format=HTML', odcInstallation: 'OWASP-Dependency-Check'
            }
			}
        stage('Build and push') {
            steps {
                echo 'builds the code using maven and publishes the artifacts'
				bat "mvnw clean package"
            }
			}
            stage('Build') {
            steps {
                echo 'Build App'
            }
			}
            stage('Deploy') {
            steps {
                echo 'Deploy App'
            }
			}
            stage('deployment validation') {
            steps {
                echo 'Post Deploy Check'
            }
        }
    }
}

